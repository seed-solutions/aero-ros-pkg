<launch>
  <arg name="map_file"
       default="$(find aero_startup)/aero_move_base/maps/map.yaml"/>
  <arg name="no_static_map" default="false"/>

   <!-- global planner type -->
  <arg name="base_global_planner" default="navfn/NavfnROS"/>
  
  <!-- local planner option:
       EBandPlannerROS, TrajectoryPlannerROS, DWAPlannerROS -->
  <arg name="base_local_planner"
       default="teb_local_planner/TebLocalPlannerROS"/>
  
 <!-- Moving Parameters -->
  <arg name="base_local_planner_param"
       default="$(find aero_startup)/aero_move_base/config/TebLocalPlanner.yaml"/>

  <node pkg="move_base" type="move_base" name="move_base"
        respawn="false" output="screen">
    <remap from="cmd_vel" to="/move_base/cmd_vel"/>
    <!-- planner type -->
    <param name="base_global_planner" value="$(arg base_global_planner)"/>
    <param name="base_local_planner" value="$(arg base_local_planner)"/>

    <!-- Moving Parameters -->
    <rosparam file="$(arg base_local_planner_param)" command="load"/>

    <!-- If you use keepout map, you can set map here -->
    <rosparam file="$(arg map_file)" command="load"/>

    <!-- observation sources located in costmap_common.yaml -->
    <rosparam
        file="$(find aero_startup)/aero_move_base/config/costmap_common.yaml"
        command="load" ns="global_costmap" />
    <rosparam
        file="$(find aero_startup)/aero_move_base/config/costmap_common.yaml"
        command="load" ns="local_costmap" />

    <!-- local costmap, needs size -->
    <rosparam
        file="$(find aero_startup)/aero_move_base/config/costmap_local.yaml"
        command="load" ns="local_costmap" />
    <param name="local_costmap/width"  value="6.0"/>
    <param name="local_costmap/height" value="6.0"/>

    <!-- static global costmap, static map provides size -->
    <rosparam
        file="$(find aero_startup)/aero_move_base/config/costmap_global_static.yaml"
        command="load" ns="global_costmap" unless="$(arg no_static_map)"/>

    <!-- global costmap with laser, for odom_navigation_demo -->
    <rosparam
        file="$(find aero_startup)/aero_move_base/config/costmap_global_laser.yaml"
        command="load" ns="global_costmap" if="$(arg no_static_map)"/>

    <param name="global_costmap/width"  value="10.0" if="$(arg no_static_map)"/>
    <param name="global_costmap/height" value="10.0" if="$(arg no_static_map)"/>

    <!-- For recovery Mode -->
    <param name="/TrajectoryPlannerROS/max_rotational_vel" value="0.5"/>

  </node>

</launch>
